{
  "version": 2,

  "builds": [
    {
      "src": "./index.py",
      "use": "@vercel/python"
    },
    {
      "src": "ui/**",
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
      {
          "source": "/api/(.*)",
          "destination": "/api/api.py"
      }
    ],

  "routes": [
    {
      "src": "/ui",
      "dest": "ui/index.html"
    },
    {
      "src": "/ui/",
      "dest": "ui/index.html"
    },
    {
      "src": "/ui/(.+)",
      "dest": "ui/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/"
    },
    {
      "src": "/",
      "dest": "ui/index.html"
    },
    {
      "src": "/about",
      "dest": "index"
    },
    {
      "src": "/(.+)",
      "dest": "ui/$1"
    }
  ]
}
